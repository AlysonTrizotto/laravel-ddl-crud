<?php

namespace Tests\Unit\__DOMAIN__;

use Tests\TestCase;
use Illuminate\Foundation\Testing\RefreshDatabase;
use __NS_SERVICE__;
use __NS_MODEL__;

class __MODEL__ServiceTest extends TestCase
{
    use RefreshDatabase;

    public function test_paginate_returns_paged(): void
    {
        __MODEL__::factory()->count(3)->create();
        $s = new __MODEL__Service();
        $res = $s->paginate([], 2);
        $this->assertEquals(2, $res->perPage());
        $this->assertGreaterThanOrEqual(1, $res->total());
    }

    public function test_create_update_delete_flow(): void
    {
        $s = new __MODEL__Service();
        $payload = __MODEL__::factory()->make()->toArray();
        $created = $s->create($payload);
        $this->assertDatabaseHas('__TABLE__', ['id' => $created->getKey()]);

        $changes = __MODEL__::factory()->make()->toArray();
        $updated = $s->update($created, $changes);
        foreach ($changes as $k => $v) {
            if (in_array($k, ['created_at','updated_at','deleted_at'])) continue;
            $this->assertDatabaseHas('__TABLE__', [$k => $v]);
        }

        $s->delete($updated);
        $this->assertSoftDeleted('__TABLE__', ['id' => $updated->getKey()]);
    }
}
